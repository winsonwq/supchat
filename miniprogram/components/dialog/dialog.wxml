<!--dialog.wxml-->
<view class="dialog-overlay {{ visible ? 'visible' : '' }}" bindtap="onOverlayTap">
  <view class="dialog-container" catchtap="onContainerTap">
    <!-- 标题栏 -->
    <view class="dialog-header" wx:if="{{ title }}">
      <text class="dialog-title">{{ title }}</text>
      <view class="dialog-close" bindtap="onClose">
        <svg-icon name="clear" size="24" color="#999"></svg-icon>
      </view>
    </view>
    
    <!-- 内容区域 -->
    <view class="dialog-content">
      <slot></slot>
    </view>
    
    <!-- 底部按钮 -->
    <view class="dialog-footer" wx:if="{{ showFooter }}">
      <button 
        wx:if="{{ cancelText }}"
        class="btn btn-secondary" 
        bindtap="onCancel"
      >
        {{ cancelText }}
      </button>
      <button 
        wx:if="{{ confirmText }}"
        class="btn btn-primary" 
        bindtap="onConfirm"
      >
        {{ confirmText }}
      </button>
    </view>
  </view>
</view>
