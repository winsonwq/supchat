<!--tool-detail-dialog.wxml-->
<generic-dialog 
  visible="{{ visible }}" 
  title="工具详情"
  showClose="{{ true }}"
  maskClosable="{{ true }}"
  width="700rpx"
  bind:close="onClose"
>
  <view class="tool-detail-content">
    <!-- 工具名称 -->
    <view class="tool-section">
      <view class="section-title">工具名称</view>
      <view class="section-content">
        <text class="tool-name">{{ tool.name }}</text>
      </view>
    </view>
    
    <!-- 工具描述 -->
    <view class="tool-section">
      <view class="section-title">工具描述</view>
      <view class="section-content">
        <text class="tool-description">{{ tool.description }}</text>
      </view>
    </view>
    
    <!-- 工具状态 -->
    <view class="tool-section">
      <view class="section-title">工具状态</view>
      <view class="section-content">
        <view class="tool-status">
          <text class="status-label">启用状态:</text>
          <text class="status-value {{ tool.isEnabled !== false ? 'status-enabled' : 'status-disabled' }}">
            {{ tool.isEnabled !== false ? '已启用' : '已禁用' }}
          </text>
        </view>
        <!-- 调试信息 -->
        <view class="debug-info" wx:if="{{ tool._configName }}">
          <text class="debug-text">来源配置: {{ tool._configName }}</text>
          <text class="debug-text">配置ID: {{ tool._configId }}</text>
        </view>
      </view>
    </view>
    
    <!-- 输入参数 -->
    <view class="tool-section" wx:if="{{ tool.inputSchema }}">
      <view class="section-title">输入参数</view>
      <view class="section-content">
        <view class="schema-info">
          <text class="schema-type">类型: {{ tool.inputSchema.type || 'object' }}</text>
          <view class="schema-properties" wx:if="{{ tool.inputSchema.properties }}">
            <view class="property-item" wx:for="{{ tool.inputSchema.properties }}" wx:key="index" wx:for-item="prop" wx:for-index="propName">
              <text class="property-name">{{ propName }}</text>
              <text class="property-type">{{ prop.type || 'string' }}</text>
              <text class="property-required" wx:if="{{ isPropertyRequired(propName) }}">*</text>
            </view>
          </view>
        </view>
      </view>
    </view>

  </view>
</generic-dialog>
