<view class="container">
  <view class="header">
    <text class="title">存储服务测试</text>
    <text class="subtitle">测试统一的存储服务接口</text>
  </view>

  <view class="actions">
    <button 
      class="btn btn-primary" 
      bindtap="testDatabaseOperations"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      测试数据库操作
    </button>
    
    <button 
      class="btn btn-secondary" 
      bindtap="testBatchOperations"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      测试批量操作
    </button>
    
    <button 
      class="btn btn-secondary" 
      bindtap="testLocalStorage"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      测试本地存储
    </button>

    <button 
      class="btn btn-secondary" 
      bindtap="testErrorHandling"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      测试错误处理
    </button>

    <button 
      class="btn btn-success" 
      bindtap="runAllTests"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      运行所有测试
    </button>
    
    <button 
      class="btn btn-outline" 
      bindtap="clearResults"
      disabled="{{loading}}"
    >
      清空结果
    </button>
  </view>

  <view class="results">
    <text class="results-title">测试结果</text>
    <scroll-view class="results-content" scroll-y>
      <view wx:if="{{testResults.length === 0}}" class="no-results">
        <text>暂无测试结果，请点击上方按钮开始测试</text>
      </view>
      <view wx:for="{{testResults}}" wx:key="index" class="result-item">
        <text class="result-text">{{item}}</text>
      </view>
    </scroll-view>
  </view>
</view>
