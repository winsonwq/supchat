<!--ai-settings.wxml-->
<navigation-bar
  title="AI 设置"
  back="{{ true }}"
  color="black"
  background="#FFF"
>
</navigation-bar>

<view class="ai-settings-container" style="padding-top: {{ contentPaddingTop }}px">
  <!-- 配置列表 -->
  <view class="configs-section">
    <view class="section-header">
      <text class="section-title">AI 配置</text>
      <button class="add-button flex align-center gap-4" bindtap="onAddConfig">
        <svg-icon name="plus" size="32" color="white"></svg-icon>
        <text class="add-text">添加</text>
      </button>
    </view>

    <!-- 配置列表 -->
    <view class="configs-list" wx:if="{{ configs.length > 0 }}">
      <view 
        wx:for="{{ configs }}" 
        wx:key="id" 
        class="config-item {{ item.isActive ? 'config-item--active' : '' }}"
        bindtap="onSelectConfig"
        data-id="{{ item.id }}"
      >
        <view class="config-content">
          <view class="config-check" wx:if="{{ item.isActive }}">
            <svg-icon name="check" size="28" color="white"></svg-icon>
          </view>
          <view class="config-main">
            <text class="config-name">{{ item.name }}</text>
            <text class="config-detail">{{ item.model }}</text>
          </view>
          <view class="config-actions">
            <button class="action-btn" catchtap="onEditConfig" data-id="{{ item.id }}">
              <svg-icon name="edit" size="32" color="gray"></svg-icon>
            </button>
            <button class="action-btn" catchtap="onDeleteConfig" data-id="{{ item.id }}">
              <svg-icon name="delete" size="32" color="gray"></svg-icon>
            </button>
          </view>
        </view>
      </view>
    </view>

    <!-- 空状态 -->
    <view class="empty-state" wx:else>
      <text class="empty-title">暂无AI配置</text>
    </view>
  </view>
</view>
